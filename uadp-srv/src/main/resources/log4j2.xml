<?xml version="1.0" encoding="UTF-8"?>
<!-- status=debug 可以查看log4j的装配过程， monitorInterval单位是秒 -->
<configuration status="off" monitorInterval="300">
	<properties>
		<property name="LOG_HOME">${sys:catalina.home}/logs</property>
		<property name="FULL_FILE_NAME">uadp</property>
		<property name="ERROR_FILE_NAME">uadp-error</property>
		<property name="SQL_FILE_NAME">uadp-sql</property>
		<Property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss} %-5level [%class:%line] - %m%n</Property>
		<property name="MAX_LOG_FILE_SIZE">500MB</property>
	</properties>
	<appenders>
		<!-- 定义控制台输出 -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="${PATTERN}" />
		</Console>

		<!-- 定义文件输出日志，包括debug、info、warn -->
		<RollingRandomAccessFile name="uadp-full"
			fileName="${LOG_HOME}/${FULL_FILE_NAME}.log"
			filePattern="${LOG_HOME}/%d{yyyy-MM}/${FULL_FILE_NAME}-%d{yyyyMMdd}-%i.log.zip">
			<Filters>
				<ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
			</Filters>
			
			<PatternLayout pattern="${PATTERN}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="${MAX_LOG_FILE_SIZE}" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingRandomAccessFile>

		<!-- 定义文件输出日志，包括error -->
		<RollingRandomAccessFile name="uadp-error"
			fileName="${LOG_HOME}/${ERROR_FILE_NAME}.log"
			filePattern="${LOG_HOME}/%d{yyyy-MM}/${ERROR_FILE_NAME}-%d{yyyyMMdd}-%i.log.zip">

			<ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />

			<PatternLayout pattern="${PATTERN}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="${MAX_LOG_FILE_SIZE}" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingRandomAccessFile>

		<!-- 定义文件输出日志，包括error -->
		<RollingRandomAccessFile name="uadp-sql"
								 fileName="${LOG_HOME}/${SQL_FILE_NAME}.log"
								 filePattern="${LOG_HOME}/%d{yyyy-MM}/${SQL_FILE_NAME}-%d{yyyyMMdd}-%i.log.zip">

			<ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY" />

			<PatternLayout pattern="${PATTERN}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="${MAX_LOG_FILE_SIZE}" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingRandomAccessFile>

		<Async name="async-full" includeLocation="true">
			<AppenderRef ref="uadp-full" />
		</Async>
		<Async name="async-error" includeLocation="true">
			<AppenderRef ref="uadp-error" />
		</Async>
		<Async name="async-sql" includeLocation="true">
			<AppenderRef ref="uadp-sql" />
		</Async>
	</appenders>

	<loggers>
		<logger name="org.springframework.core" level="error"></logger>
		<logger name="org.springframework.beans" level="error"></logger>
		<logger name="org.springframework.context" level="error"></logger>
		<logger name="org.springframework.web" level="error"></logger>
		<logger name="org.jboss.netty" level="error"></logger>
		<logger name="org.apache.http" level="error"></logger>
		<logger name="com.mchange.v2" level="error"></logger>

		<!-- druid配置 -->
		<logger name="druid.sql.Statement" level="debug" additivity="false">
			<appender-ref ref="async-sql"/>
		</logger>
		<logger name="druid.sql.ResultSet" level="debug" additivity="false">
			<appender-ref ref="async-sql"/>
		</logger>

		<!-- Root Logger -->
		<root level="DEBUG">
			<appender-ref ref="async-full" />
			<appender-ref ref="async-error" />
			<appender-ref ref="Console" />
		</root>
	</loggers>
</configuration>  